@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/bootstrap/css")
    @Styles.Render("~/icon/css")
    @Styles.Render("~/Bundle/sass")
    @Styles.Render("~/Bundle/main")
    @RenderSection("AddCss", required: false)
</head>
<body>
    @RenderPage("header.cshtml")
    @RenderBody()
    <button id="loginModalCheck" style="display:none" type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Launch demo modal
    </button>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="exampleModalLabel">Notification</h2>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h4 class="ml-4" >
                        You need to login to use !
                    </h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <a href="~/Home/Login"  class="btn btn-primary">Login now</a>
                </div>
            </div>
        </div>
    </div>
    @RenderPage("footer.cshtml")
    @Scripts.Render("~/jquery/js")
    @Scripts.Render("~/bootstrap/js")
    @Scripts.Render("~/Bundles/Scripts/axios")
    @Scripts.Render("~/Bundles/Scripts/main")
    @RenderSection("scripts", required: false)

</body>
</html>
